<% @page_title ="お知らせ"%>

<main>
  <h2 class="logo_h">POSTS</h2>
      <ul class="news_list">
        <% @posts.each do |post|%>
          <li class="news_item">
            <%= link_to  post do  %>
              <%= image_tag "news/news_icon.jpg" ,alt: "news_icon" , class: "news_image"%>
              <p class="news_message"><%= post.body %>
              </p>
            <% end %>
          </li>
        <% end %>
      </ul>
</main>
