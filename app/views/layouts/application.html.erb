<!DOCTYPE html>
<html>

<head>
  <title>
    <%=page_title %>
  </title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%= render "/shared/header"%>
  <% if !flash.empty? %>
  <div class="flash-notion">
    <%= flash[:notion]%>

  </div>
  <% end %>
  <%= yield %>
  <%= render "/shared/footer"%>
</body>

</html>
